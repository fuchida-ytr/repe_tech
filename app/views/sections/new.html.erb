
<%= stylesheet_link_tag "sections", :media => "all" %>

<div class="container">
    <div class="row new-view">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">

                <li class="breadcrumb-item">
                    <%= link_to @chapter.course.title, course_path(@chapter.course) %>
                </li>

                <li class="breadcrumb-item active" aria-current="page">
                    <%= link_to @chapter.title, course_chapter_path(@chapter.course, @chapter) %>
                </li>

                <li class="breadcrumb-item active" aria-current="page">new</li>
            </ol>
        </nav>

        <h2 class="title">new section</h2>
        <hr>

        <%= form_with model: [@chapter, @section] do |section| %>

            <div class="field">
                <%= section.label :title %><br />
                <%= section.text_field :title, class: 'title_field' %>
            </div>

            <div class="field">
                <%= section.label :content %><br />
        
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link disabled" id="write-tab" data-toggle="tab" href="#write" role="tab" aria-controls="write" aria-selected="true">Write</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="preview-tab" data-toggle="tab" href="#preview" role="tab" aria-controls="preview" aria-selected="false">Preview</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="write" role="tabpanel" aria-labelledby="write-tab">
                        <%= section.text_area :content, class: 'content_field' %>
                    </div>
                    <div class="tab-pane fade" id="preview" role="tabpanel" aria-labelledby="preview-tab"></div>
                </div>
            </div>

            <div class="actions">
                <%= section.submit '作成', class: "create-btn" %>
            </div>
        <% end %>
    </div>
</div>

<%= javascript_pack_tag 'preview' %>