
<h1><%= @course.title %></h1>

<hr>

<p><%= @course.caption %></p>

<hr>



<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>chapter</th>
            <th>edit</th>
            <th>delete</th>
        </tr>
    </thead>

    <% @chapters.each do |chapter| %>
        <% next unless chapter.id %>
        <tr>
            <td><%= link_to chapter.title, course_chapter_path(@course, chapter) %></td>
            <td><%= link_to 'edit', edit_course_chapter_path(@course, chapter) %></td>
            <td><%= link_to "delete", course_chapter_path(@course, chapter), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
    <% end %>

    <tr>
        <%= form_with model: [@course, @chapter] do |chapter| %>
            <td><%= chapter.text_field :title %></td>
            <td><%= chapter.submit "作成" %></td>
        <% end %>
    </tr>
</table>
