<%= stylesheet_link_tag "courses", :media => "all" %>

<div class="container-fluid">
    <div class="row index-view">

      <div class="new-modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" data-backdrop="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">

            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">コース編集</h5>
            </div>

            <div class="modal-body">
              <%= form_with model: @course do |course| %>
                <ul>
                  <li>
                    <div><img src="http://3.1m.yt/TRDtJPn.png" alt="" /></div>
                    <h1> <%= course.text_field :title, class: 'form-control', placeholder: 'タイトル' %></h1>
                    <p><%= course.text_area :caption, class: 'form-control', placeholder: '説明' %></p>
                  </li>
                </ul>
                <div class="modal-footer">
                <%= course.submit "更新", class: 'btn btn-primary' %>
                </div>
              <% end %>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->

    </div>
</div>