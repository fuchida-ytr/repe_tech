
<%= stylesheet_link_tag "home", :media => "all" %>

<div class="row search-view">
    <h2>検索結果：<%= @keyword %></h2>
    <hr>
    <div class="search-result">
        <h4>コース</h4>
        <% @sections.each do |section| %>
            <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary"><%= section.chapter.course.title %></strong>
                    <h5 class="mb-0">
                        <%= link_to section.title, chapter_section_path(section.chapter, section), class: "text-dark" %>
                    </h5>
                    <div class="mb-1 text-muted">Nov 12</div>
                    <p class="card-text mb-auto"><%= section.content.truncate(100) %></p>
                </div>
            </div>
        <% end %>
        <% if @sections.empty? %>
            <p>該当なし</p>
        <% end %>
        <hr>
        <h4>記事</h4>
        <% @articles.each do |article| %>
            <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary"><%= article.category.name %></strong>
                    <h5 class="mb-0">
                        <%= link_to article.title, article_path(article), class: "text-dark" %>
                    </h5>
                    <div class="mb-1 text-muted"><%= article.updated_at.strftime('%Y/%m/%d') %></div>
                    <p class="card-text mb-auto"><%= article.content.truncate(100) %></p>
                </div>
            </div>
        <% end %>
        <% if @articles.empty? %>
            <p>該当なし</p>
        <% end %>
    </div>
</div>