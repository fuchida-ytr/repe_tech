<% if resource.errors.any? %>
    <script>
        <% resource.errors.full_messages.each do |message| %>
        new Noty({
            type: 'error',
            layout: 'topRight',
            timeout: 100000,
            theme: 'sunset',
            text: '<%= message %>',
            closeWith: ['button']              
        }).show();
        <% end %>
    </script>
<% end %>
