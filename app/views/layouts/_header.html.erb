<header>
<% if admin_signed_in? %>
    <%= current_admin.name %>
    <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, "data-confirm" => "本当にログアウトしますか？" %>
<% elsif user_signed_in? %>
    <%= current_user.name %>
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, "data-confirm" => "本当にログアウトしますか？" %>
<% else %>
<p2>一般</p2>
    <%= link_to "管理者登録", new_admin_registration_path %><br />
    <%= link_to "ユーザー登録", new_user_registration_path %><br />
<% end %>
</header>